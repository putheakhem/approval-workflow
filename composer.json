{
  "name": "putheakhem/approval-workflow",
  "description": "Flexible approval workflow engine for Laravel (approval chain, steps, parallel approvals, audit trail).",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "illuminate/support": "^12.0",
    "illuminate/database": "^12.0"
  },
  "autoload": {
    "psr-4": {
      "PutheaKhem\\ApprovalWorkflow\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PutheaKhem\\ApprovalWorkflow\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "PutheaKhem\\ApprovalWorkflow\\ApprovalWorkflowServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "laravel/pint": "^1.27",
    "orchestra/testbench": "^10.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
